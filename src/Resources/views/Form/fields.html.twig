{%- block collection_widget -%}
  {% if allow_add %}
    <div class="mb-3">
      <button
        type="button"
        class="btn btn-primary"
        data-prototype="{{ form_widget(prototype)|e('html_attr') }}"
        onclick="addCollectionItem(event, '{{ id }}')"
        {% if disabled %}disabled{% endif %}
      >{{ 'generic.add'|trans }}</button>
    </div>
  {% endif %}

  <table class="table border-top my-0">
    <tbody id="{{ id }}">
      {%- for item in form -%}
        {{ form_widget(item) }}
      {%- endfor -%}
    </tbody>
  </table>
{%- endblock -%}

{%- block collection_entry_widget -%}
  <tr id="{{ id }}" class="collection-item">
    {%- for item in form -%}
      <td>
        {{ form_widget(item) }}
        {{ form_errors(item) }}
      </td>
    {%- endfor -%}

    {% if form.parent.vars.allow_delete %}
      <td style="min-width: 60px">
        <button
          type="button"
          class="btn btn-link link-danger px-0"
          onclick="removeCollectionItem('{{ id }}', '{{ 'generic.remove_confirmation'|trans }}')"
          {% if form.parent.vars.disabled %}disabled{% endif %}
        >{{ 'generic.remove'|trans }}</button>
      </td>
    {% endif %}
  </tr>
{%- endblock -%}
